
<h1 style="text-decoration: underline; text-align:center">Home</h1>

<div class="Session" style="display: grid; grid-template-columns: 1fr 1fr; margin-inline: 15%; padding: 5%">

    <div class="Login" style="display: grid; grid-template-rows: 1fr 1fr; ">
        <form action="http://localhost:8080/api/user/login" method="post">
            <fieldset  style="display: grid; grid-template-rows: 1fr 1fr 1fr;">
                <legend><h3>Inicio de Sesion</h3></legend>
                <input type="text" name="email" id="email" placeholder="email...">
                <input type="password" name="password" id="password" placeholder="***">
                <input type="submit" value="Iniciar Sesion">
            </fieldset>
        </form>

        <a href="/changePass">
            <button>Olvide la contrase√±a</button>
        </a>
    </div>

    <div class="Register" style="display: grid; grid-template-row: 1fr 1fr;">
        <form action="http://localhost:8080/api/user/register" method="post">
            <fieldset   style="display: grid; grid-template-rows: repeat(6, 1fr);">
                <legend><h3>Nuevo usuario</h3></legend>
                <input type="text" name="firstName" placeholder="First Name">
                <input type="text" name="lastName" placeholder="Last Name">
                <input type="text" name="email" placeholder="email" required="true">
                <input type="password" name="password" placeholder="password">
                <input type="tel" name="phone" id="phone" placeholder="phone">
                <input type="submit" value="Crear Cuenta">
            </fieldset>
        </form>

        <div class="buttons" style="display: grid; grid-template-columns: 1fr 1fr 1fr;">
            <a href="">
                <button>Github</button>
            </a>
            <a href="/api/user/auth/google">
                <button>Google</button>
            </a>
            <a href="/api/user/auth/facebook">
                <button>Facebook</button>
            </a>
        </div>
    </div>

</div>



