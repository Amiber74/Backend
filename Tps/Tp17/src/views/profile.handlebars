
<h1 style="text-decoration:underline; text-align:center"> Tienda </h1>

<form action="http://localhost:8080/api/user/logout" method="get" style="margin: 10px">
    <input type="submit" value="logout">
</form>
<form action="http://localhost:8080/api/cart/{{Cid}}" method="get" style="margin: 10px">
    <input type="submit" value="Carrito">
</form>

{{#if role}}
    <hr>

        <form action="http://localhost:8080/api/product/newproduct" method="post">
            <input type="text" name="title" placeholder="title">
            <input type="text" name="description" placeholder="description"> 
            <input type="number" name="price" placeholder="price">
            <input type="number" name="stock" placeholder="stock"> 
            <input type="submit" value="Crear Producto">
        </form>

    <hr>
{{/if}}

{{#if Products}}
    <div class="container" style="display: grid; grid-template-columns:repeat(4,1fr); text-align:center; gap:5px">
        {{#each Products}}
            <div class="Card" style="border:1px solid black; padding:5px; border-radius: 15px;">
            <h4> {{this.title}} &nbsp;</h4>
            <div class="img" style="width: 150px; heigth: 150px; background-color:gray; color: gray">.</div>
            <p> {{this.description}} </p>
            <p> $ {{this.price}} &nbsp;</p>
            <form action="http://localhost:8080/api/cart/addproduct/{{this.Cid}}/{{this._id}}" method="post">
                <input type="number" name="quantity" id="quantity" min="1" >
                <input type="submit" value="Agregar carrito">
            </form>
            </div>  
        {{/each}}
    </div>

{{else}}

    <h2>Sin productos en el servidor</h2>

{{/if}}
